#include <stdio.h>
int main(){
int s, i, arr[10];
do{
printf("\nNhap so phan tu mang toi da 10: ");
scanf("%d", &s);
}while(s>10);
printf("\nNhap gia tri:\n");
for(i=0; i<s; i++){
scanf("%d", &arr[i]);
}
printf("\nCac so chan la: ");
for(i=0; i<s; i++){
if(arr[i] % 2 != 1){
printf("%d, ", arr[i]);
}
}
return 0;
}
